<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/selector_notification_item"
              android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/noti_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/noti_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/noti_sub_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/noti_small_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="#88cccc"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/noti_large_icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="#88cccc"
        android:visibility="gone"/>

    <FrameLayout
        android:id="@+id/noti_content_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="54dp"/>

    <FrameLayout
        android:id="@+id/noti_big_content_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#88333333"
        android:minHeight="54dp"
        android:visibility="gone"/>

</LinearLayout>