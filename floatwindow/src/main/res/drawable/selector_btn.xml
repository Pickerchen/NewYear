        <shape>
            <corners android:radius="20px" />
            <solid android:color="@drawable/menu_button_pressed_bg" />
        </shape>
    </item>
        
    <item android:state_focused="true">
        <shape>
            <corners android:radius="20px" />
            <solid android:color="@drawable/menu_button_focused_bg" />
        </shape>
  	 </item>
        
    <item>
        <shape>
            <corners android:radius="20px" />
            <solid android:color="@drawable/menu_button_normal_bg" />
        </shape>
    </item>

</selector>