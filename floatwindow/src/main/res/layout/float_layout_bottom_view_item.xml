<?xml version="1.0" encoding="utf-8"?>
<com.ipcamera.main.cuswidget.MyBottomScaleView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:background="#000000ff"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:descendantFocusability="beforeDescendants"
    android:orientation="vertical" >

<!--         android:background="@drawable/ic_bottom_ic_bg_t" -->
    <com.ipcamera.main.cuswidget.MyImageView
        android:id="@+id/img_bottom_item_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:focusable="false"
        android:padding="@dimen/dimen_bottom_padding"/>
    
<!--         android:singleLine="true"
  android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever" -->
    <com.ipcamera.main.cuswidget.Sen5TextView
        android:id="@+id/tv_bottom_item_name"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
		android:singleLine="true"
		android:ellipsize="marquee"
		android:marqueeRepeatLimit="marquee_forever"
       	android:background="@drawable/selector_menu_item_title_bg"
        android:gravity="center_horizontal"
        android:textSize="18dp"
        />
<!--  android:layout_gravity="center" -->
</com.ipcamera.main.cuswidget.MyBottomScaleView>