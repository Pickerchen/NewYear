<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_video_files"
    android:orientation="vertical"
    android:background="@color/black_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/activity_video_type_1"
        android:layout_marginTop="@dimen/sixty"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_width="@dimen/sixty"
            android:layout_height="@dimen/sixty"
            android:src="@mipmap/btn_file"
            />
        <TextView
            android:textColor="@color/tv_white"
            android:textSize="48px"
            android:layout_marginLeft="@dimen/thirty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/video_files"
            />

        <View
            android:layout_marginLeft="10dp"
            android:layout_width="2dp"
            android:layout_height="@dimen/twentyEight"
            android:background="@color/tv_white"
            />

        <TextView
            android:textColor="@color/tv_white"
            android:layout_marginLeft="@dimen/ten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="38px"
            android:text="@string/tenSecondVideo"
            />
    </LinearLayout>

</LinearLayout>