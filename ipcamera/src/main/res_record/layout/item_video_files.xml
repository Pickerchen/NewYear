<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="@dimen/THundred"
                android:layout_height="@dimen/TT"
                android:focusable="true"
                android:background="@color/black_color"
                android:id="@+id/item_video_files_rl"

    >

    <TextView
        android:layout_marginLeft="@dimen/thirty"
        android:textColor="@android:color/transparent"
        android:id="@+id/item_tv_time_title"
        android:layout_height="@dimen/twenty"
        android:layout_width="wrap_content"
        android:text="WiFiCam"
        android:gravity="center_vertical"
        />

    <LinearLayout
        android:layout_marginRight="@dimen/ten"
        android:layout_marginLeft="@dimen/ten"
        android:layout_marginTop="@dimen/thirty"
        android:id="@+id/item_video_ll_content"
        android:layout_width="@dimen/THundred"
        android:layout_height="@dimen/ON"
        android:background="@color/item_video_top_bg"
        android:orientation="vertical"
        >

        <ImageView
            android:scaleType="fitXY"
            android:layout_width="@dimen/THundred"
            android:layout_height="@dimen/OF"
            android:id="@+id/item_video_thumb"
            />
        <LinearLayout
            android:layout_width="@dimen/THundred"
            android:layout_height="@dimen/fifty"
            android:paddingLeft="@dimen/eight"
            android:background="@color/item_video_below_bg"
            android:orientation="vertical"
            >
        <TextView
            android:textColor="@color/tv_white"
            android:id="@+id/item_tv_device_name"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/twentyFive"
            android:text="Backyard"
            />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/item_tv_time_content"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/twentyFive"
                    android:textColor="@color/tv_white"
                    android:text="7/4/2017"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/item_tv_time_duration"
                    android:text="120min"
                    android:layout_marginLeft="@dimen/fifteen"
                    android:textColor="@color/tv_white"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>