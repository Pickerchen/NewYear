<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:background="@drawable/item_record_selector"
                android:paddingRight="@dimen/twenty"
                android:id="@+id/item_record_rl"
                android:focusable="false"
    >
    <ImageView
        android:scaleType="fitXY"
        android:layout_marginTop="@dimen/fourtyFive"
        android:layout_width="@dimen/TE"
        android:layout_height="@dimen/HundredFourtyFive"
        android:id="@+id/item_recording_iv"
        android:layout_marginLeft="@dimen/fourty"
        android:src="@mipmap/bg_camera_default_allscreen"
        />
    <LinearLayout
        android:layout_marginTop="@dimen/fourtyFive"
        android:id="@+id/item_ll_hint"
        android:layout_toRightOf="@id/item_recording_iv"
        android:layout_marginLeft="@dimen/thirty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <!--android:layout_marginTop="@dimen/N_ten"-->
        <TextView
            android:textSize="38px"
            android:textColor="@color/record_content"
            android:id="@+id/item_ll_Name"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/record_item_name"
            />

        <LinearLayout
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <ImageView
                android:id="@+id/item_device_online_iv"
                android:layout_width="@dimen/twenty"
                android:layout_height="@dimen/twenty"
                android:src="@drawable/record_ic_normal"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/ten"
                android:textSize="36px"
                android:textColor="@color/record_setting_status"
                android:id="@+id/item_device_online_status"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/record_item_status_normal"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:id="@+id/item_ll_timed"
            >

            <ImageView
                android:id="@+id/item_device_timed_iv"
                android:layout_width="@dimen/twenty"
                android:layout_height="@dimen/twenty"
                android:src="@drawable/record_ic_recording_type"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/ten"
                android:textSize="36px"
                android:textColor="@color/record_content"
                android:id="@+id/item_device_timed_status"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/record_item_timed_recording"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_record_status_ll"
            android:visibility="invisible"
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <ImageView
                android:id="@+id/item_device_record_iv"
                android:layout_width="@dimen/twenty"
                android:layout_height="@dimen/twenty"
                android:src="@drawable/record_ic_recording"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/ten"
                android:textSize="36px"
                android:textColor="@color/record_item_recording"
                android:id="@+id/item_device_record_status"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/record_item_recording"
                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/fourty"
            />

    </LinearLayout>

    <View
        android:visibility="invisible"
        android:layout_toRightOf="@id/item_ll_hint"
        android:id="@+id/item_line"
        android:layout_width="1px"
        android:layout_height="@dimen/OO"
        android:layout_marginTop="@dimen/NineTyFive"
        android:layout_marginLeft="@dimen/twentySix"
        android:background="@color/tv_white"
        />

    <LinearLayout
        android:visibility="invisible"
        android:id="@+id/ll_clocksetting"
        android:layout_toRightOf="@id/item_line"
        android:layout_marginTop="@dimen/eightyFive"
        android:layout_marginLeft="@dimen/twentySix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:textSize="48px"
            android:id="@+id/item_tv_time_duration"
            android:textColor="@color/record_content"
            android:layout_marginTop="@dimen/eight"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="00:00 - 07:00"
            />

        <!--周期-->
        <TextView
            android:textSize="40px"
            android:id="@+id/item_tv_timed_time"
            android:textColor="@color/record_content"
            android:layout_marginTop="@dimen/eight"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Everyday"
            />
    </LinearLayout>

    <!--<ImageView
            android:visibility="gone"
            android:focusable="true"
            android:alpha="0.001"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:id="@+id/item_iv_stop"
            android:src="@drawable/record_btn_stop"
            />-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/sixty"
        >

        <LinearLayout
            android:layout_marginTop="@dimen/fourtyFive"
            android:id="@+id/item_ll_switch"
            android:layout_width="@dimen/HundredThirty"
            android:layout_height="@dimen/seventy"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <TextView
                android:visibility="gone"
                android:id="@+id/record_item_switch_status"
                android:textSize="@dimen/twentyThree"
                android:paddingBottom="3dp"
                android:textColor="@color/record_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/sixty"
                android:layout_alignParentRight="true"
                android:text="@string/switch_status_on"
                />
        <android.support.v7.widget.SwitchCompat
            android:layout_marginLeft="@dimen/fifteen"
            android:paddingRight="@dimen/thirteen"
            android:alpha="0.0001"
            android:focusable="true"
            android:gravity="center"
            android:layout_width="@dimen/seventy"
            android:layout_height="@dimen/seventy"
            android:id="@+id/item_switch"
            android:checked="true"
            android:textSize="8dp"
            app:switchMinWidth="@dimen/fourtyFive"
            android:theme="@style/switch.test"
            />
        </LinearLayout>

        <ImageView
            android:layout_toRightOf="@id/item_ll_switch"
            android:alpha="0.001"
            android:background="@drawable/item_record_iv_bg"
            android:layout_width="@dimen/seventy"
            android:layout_height="@dimen/seventy"
            android:layout_marginTop="@dimen/fourtyFive"
            android:layout_marginLeft="@dimen/twenty"
            android:id="@+id/item_iv_setting"
            android:src="@drawable/record_btn_setting"
            android:focusable="true"
            />
    </RelativeLayout>
    <TextView
        android:layout_alignParentBottom="true"
        android:background="@color/record_item_divider"
        android:id="@+id/item_dividerView"
        android:layout_marginLeft="@dimen/fourty"
        android:layout_marginRight="@dimen/fourty"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        />
</RelativeLayout>