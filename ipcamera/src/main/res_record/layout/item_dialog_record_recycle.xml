<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="@drawable/record_setting_pop_selector"
              android:id="@+id/item_record_recycler_ll"
    >

    <CheckBox
        android:layout_marginLeft="20dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/item_record_recycler_cb"
        />

    <TextView
        android:textSize="38px"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/record_content"
        android:id="@+id/item_record_recycler_tv"
        />

</LinearLayout>