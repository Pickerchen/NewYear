<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bg_dark</item>
        <item name="colorPrimaryDark">@color/bg_dark</item>
        <item name="colorAccent">@color/bg_blue</item>

        <!-- AppCompat EditText默认状态状态底线颜色 -->
        <item name="colorControlNormal">@color/bg_white</item>
        <!-- AppCompat EditText选中时的底线颜色 -->
        <item name="colorControlActivated">@color/bg_blue</item>
    </style>

    <style name="MyTheme" parent="@android:style/Theme.Translucent.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@drawable/masked2</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

