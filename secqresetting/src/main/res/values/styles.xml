<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bg_dark</item>
        <item name="colorPrimaryDark">@color/bg_dark</item>
        <item name="colorAccent">@color/bg_blue</item>

        <!-- AppCompat EditText默认状态状态底线颜色 -->
        <item name="colorControlNormal">@color/bg_white</item>
        <!-- AppCompat EditText选中时的底线颜色 -->
        <item name="colorControlActivated">@color/bg_blue</item>
    </style>

    <!--没有ActionBar的主题-->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="WifiSettingsText">
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">@dimen/text_size_h2</item>
        <item name="android:maxLines">1</item>
    </style>

    <!-- Toast动画 -->
    <style name="ToastAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/toast_fall_in</item>
        <item name="android:windowExitAnimation">@anim/toast_fall_out</item>
    </style>


    <style name="AddDevicesDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/ActionSheetDialogAnimation</item>
        <!-- 背景透明 -->
        <item name="android:windowContentOverlay">@android:color/transparent</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@android:color/transparent</item>

    </style>

    <style name="ActionSheetDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/anim_right_in</item>
        <item name="android:windowExitAnimation">@anim/anim_right_out</item>
    </style>

</resources>
