<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wheelView="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/bg_black"
    tools:context="com.sen5.smartlifebox.ui.main.MainActivity">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:background="@color/bg_dark">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/horizontal_margin"
            android:text="@string/set_to_emergency_contact"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_h1" />

    </RelativeLayout>

    <com.sen5.smartlifebox.widget.WheelView
        android:id="@+id/wheel_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        wheelView:item_height="60dp" />


</LinearLayout>
